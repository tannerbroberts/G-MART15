{
  /**
   * Vercel Deployment Configuration
   * ------------------------------------------------------------------------------
   * This configuration controls how the frontend React/Vite app is built and deployed to Vercel
   * It also manages API proxying to the Heroku backend and security headers
   */
  
  // Build and installation commands
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "installCommand": "cd client && npm install",
  
  // API Proxy Configuration
  // Routes API and auth requests to the Heroku backend
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "https://gmart15-blackjack-express-1946fea61846.herokuapp.com/api/$1" 
    },
    { 
      "source": "/auth/(.*)", 
      "destination": "https://gmart15-blackjack-express-1946fea61846.herokuapp.com/auth/$1" 
    }
  ],
  
  // Security Headers
  // Adds important security headers to all responses
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        // Prevents MIME type sniffing security vulnerabilities
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        // Prevents the page from being displayed in an iframe (clickjacking protection)
        { "key": "X-Frame-Options", "value": "DENY" },
        // Enables browser's XSS filtering capabilities
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ],
  
  // GitHub Integration Settings
  "github": {
    "enabled": true,  // Enables automatic deployments from GitHub pushes
    "silent": true    // Prevents comment spam on pull requests
  }
}