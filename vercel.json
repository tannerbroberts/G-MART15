{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "installCommand": "cd client && npm install",
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "https://gmart15-blackjack-express-1946fea61846.herokuapp.com/api/$1" 
    },
    { 
      "source": "/auth/(.*)", 
      "destination": "https://gmart15-blackjack-express-1946fea61846.herokuapp.com/auth/$1" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ],
  "github": {
    "enabled": true,
    "silent": true
  }
}